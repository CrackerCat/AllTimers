<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg_1">

    <TextView
        android:id="@+id/common_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="请输入"
        android:textColor="#995B3A"
        app:layout_constraintBottom_toBottomOf="@+id/common_tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/common_tv_cancel" />

    <EditText
        android:id="@+id/common_et_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/common_shape_et_background"
        android:hint="请输入内容"
        android:paddingStart="38dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/common_shape_cursor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/common_tv_title"
        app:layout_constraintVertical_bias="0.58000004" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:tint="#AD7557"
        app:layout_constraintBottom_toBottomOf="@+id/common_et_text"
        app:layout_constraintStart_toStartOf="@+id/common_et_text"
        app:layout_constraintTop_toTopOf="@+id/common_et_text"
        app:srcCompat="@drawable/common_ic_write"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/common_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="取消"
        android:textColor="#995B3A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/common_iv_done"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/common_tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/common_tv_cancel"
        app:srcCompat="@drawable/common_ic_dialog_done" />
</androidx.constraintlayout.widget.ConstraintLayout>