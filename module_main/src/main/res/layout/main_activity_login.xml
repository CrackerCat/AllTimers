<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.sandyz.alltimers.common.view.costom.DynamicBackgroundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF3F0"
        app:background_src="@drawable/common_ic_bg_rabbit"
        tools:context=".view.activity.ActivityLogin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/main_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Welcome to"
                android:textColor="#FB9797"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/main_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="BOB."
                android:textColor="#FB9797"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@+id/main_textview"
                app:layout_constraintTop_toBottomOf="@+id/main_textview" />

            <ImageView
                android:id="@+id/main_imageview"
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/main_constraintlayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/main_ic_rabbit_login" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_constraintlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/main_login_bg_1"
                android:padding="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/main_tv_guide_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:text="还没有账号？立即注册"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_tv_login" />

                <TextView
                    android:id="@+id/main_tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/common_btn_bg_1"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_selector_contractions" />

                <EditText
                    android:id="@+id/main_et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/main_shape_et_bg"
                    android:hint="密码"
                    android:paddingStart="50dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/common_shape_cursor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/main_textview4"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview5" />

                <TextView
                    android:id="@+id/main_textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="密码"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_et_phone" />

                <EditText
                    android:id="@+id/main_et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/main_shape_et_bg"
                    android:hint="手机号"
                    android:paddingStart="50dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/common_shape_cursor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/main_textview4"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview4" />

                <TextView
                    android:id="@+id/main_textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textColor="#AD7557"
                    android:textSize="26sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/main_textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="手机号"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview3" />

                <ImageView
                    android:id="@+id/main_imageview2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_et_phone"
                    app:layout_constraintStart_toStartOf="@+id/main_et_phone"
                    app:layout_constraintTop_toTopOf="@+id/main_et_phone"
                    app:srcCompat="@drawable/main_ic_phone" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_et_code"
                    app:layout_constraintStart_toStartOf="@+id/main_et_code"
                    app:layout_constraintTop_toTopOf="@+id/main_et_code"
                    app:srcCompat="@drawable/main_ic_code" />

                <TextView
                    android:id="@+id/main_tv_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/common_btn_bg_2"
                    android:gravity="center"
                    android:text="获取"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/main_et_code"
                    app:layout_constraintEnd_toEndOf="@+id/main_et_code"
                    app:layout_constraintTop_toTopOf="@+id/main_et_code" />

                <com.sandyz.alltimers.common.view.costom.Selector
                    android:id="@+id/main_selector_contractions"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="48dp"
                    app:hint="同意《隐私条款》"
                    app:hintColor="#666666"
                    app:hintSize="16"
                    app:check_icon_position="2"
                    app:icSize="24"
                    app:iconDrawable="@null"
                    app:isSelect="false"
                    app:isSingleSelect="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_et_code"
                    app:selectDrawable="@drawable/common_selector_clicked"
                    app:unselectDrawable="@drawable/common_selector_no_clicked" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.sandyz.alltimers.common.view.costom.DynamicBackgroundFrameLayout>
</layout>
